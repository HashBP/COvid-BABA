<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginMenu">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.gdscandroidproject.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/loginMenu"
        android:name="com.example.gdscandroidproject.LoginMenu"
        android:label="fragment_login_menu"
        tools:layout="@layout/fragment_login_menu" >
        <action
            android:id="@+id/action_loginMenu_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>